{
	"manifest_version": 2,

	"name": "AB",
	"author": "Thomas Kaldahl, Elizabeth Sims, and David Zhao",
	"description": "An accessibility interface for navigation in websites like YouTube.",
	"version": "0.0.0",
	
	"icons": {},

	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [{
		"matches": [
			"*://*.youtube.com/*",
			"*://youtube.com/*"
		],
		"css": ["content.css"],
		"js": ["content.js"]
	}],

	"permissions": [
		"activeTab",
		"webNavigation",
		"tabs",
		"*://*/*"
	],
	"web_accessible_resources": ["inject.js"]
}
